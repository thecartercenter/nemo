<div class="tip">
  <%= t("password_reset.enter_new_pass", :name => content_tag(:strong, @user.name)).html_safe %>
</div>

<%= flash_and_form_errors(@user) %>

<%= elmo_form_for(@user, :url => password_reset_path, :method => :put) do |f| %>
  <%= f.field(:password, :type => :password) %>
  <%= f.field(:password_confirmation, :type => :password) %>
  <%= f.submit %>
<% end %>
