<% node = Odk::Rendering::DecoratorFactory.decorate(node) %>
<% if node.childless? %>
  <% unless node.hidden %>
    <% node.subquestions.each do |subq| %>
      <%= tag(subq.odk_code) %>
    <% end %>
  <% end %>
<% else %>
  <% @attrs = {"jr:template" => ""} if node.repeatable %>
  <%= content_tag(node.odk_code, @attrs) do %>
    <%= tag("#{node.odk_code}-header") %>
    <% node.sorted_children.each do |child| %>
      <%= render "forms/odk/instance_node", node: child %>
    <% end %>
  <% end %>
<% end %>
