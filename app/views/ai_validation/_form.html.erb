<%= form_with model: @rule, local: true, html: { class: "ai-validation-form" } do |form| %>
  <% if @rule.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@rule.errors.count, "error") %> prohibited this rule from being saved:</h4>
      <ul>
        <% @rule.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, t("ai_validation.name"), class: "form-label" %>
    <%= form.text_field :name, class: "form-control", required: true, maxlength: 255 %>
    <small class="form-text text-muted"><%= t("ai_validation.name_help") %></small>
  </div>

  <div class="form-group">
    <%= form.label :description, t("ai_validation.description"), class: "form-label" %>
    <%= form.text_area :description, class: "form-control", rows: 3 %>
    <small class="form-text text-muted"><%= t("ai_validation.description_help") %></small>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label :rule_type, t("ai_validation.rule_type"), class: "form-label" %>
      <%= form.select :rule_type,
                      options_for_select(
                        @rule_types.map { |type| [t("ai_validation.rule_types.#{type}"), type] },
                        @rule.rule_type
                      ),
                      {},
                      { class: "form-control", required: true } %>
      <small class="form-text text-muted"><%= t("ai_validation.rule_type_help") %></small>
    </div>

    <div class="form-group col-md-6">
      <%= form.label :ai_model, t("ai_validation.ai_model"), class: "form-label" %>
      <%= form.select :ai_model,
                      options_for_select(
                        @ai_models.map { |model| [model.humanize, model] },
                        @rule.ai_model || 'gpt-3.5-turbo'
                      ),
                      {},
                      { class: "form-control", required: true } %>
      <small class="form-text text-muted"><%= t("ai_validation.ai_model_help") %></small>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label :threshold, t("ai_validation.threshold"), class: "form-label" %>
      <div class="input-group">
        <%= form.number_field :threshold,
                             in: 0.0..1.0,
                             step: 0.01,
                             class: "form-control",
                             required: true,
                             value: @rule.threshold || 0.8 %>
        <div class="input-group-append">
          <span class="input-group-text">0.0 - 1.0</span>
        </div>
      </div>
      <small class="form-text text-muted"><%= t("ai_validation.threshold_help") %></small>
    </div>

    <div class="form-group col-md-6">
      <div class="form-check mt-4">
        <%= form.check_box :active, class: "form-check-input" %>
        <%= form.label :active, t("ai_validation.active"), class: "form-check-label" %>
        <small class="form-text text-muted d-block"><%= t("ai_validation.active_help") %></small>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= form.submit t("common.save"), class: "btn btn-primary" %>
    <%= link_to t("common.cancel"), ai_validation_rules_path, class: "btn btn-secondary" %>
  </div>
<% end %>

