<% content_for :title, @rule.name %>

<div class="ai-validation-show-page">
  <div class="page-header">
    <div class="page-header-content">
      <div>
        <h1><%= @rule.name %></h1>
        <% if @rule.description.present? %>
          <p class="rule-description"><%= @rule.description %></p>
        <% end %>
      </div>
      <div class="page-header-actions">
        <% if can?(:update, @rule) %>
          <%= link_to t("ai_validation.edit"), edit_ai_validation_rule_path(@rule), class: "btn btn-primary" %>
        <% end %>
        <%= link_to t("common.back"), ai_validation_rules_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>

  <div class="rule-details">
    <div class="details-grid">
      <div class="detail-card">
        <div class="detail-label"><%= t("ai_validation.rule_type") %></div>
        <div class="detail-value">
          <span class="rule-type-badge rule-type-<%= @rule.rule_type %>">
            <%= @rule.rule_type.humanize %>
          </span>
        </div>
      </div>

      <div class="detail-card">
        <div class="detail-label"><%= t("ai_validation.ai_model") %></div>
        <div class="detail-value"><code><%= @rule.ai_model %></code></div>
      </div>

      <div class="detail-card">
        <div class="detail-label"><%= t("ai_validation.threshold") %></div>
        <div class="detail-value"><%= (@rule.threshold * 100).round(0) %>%</div>
      </div>

      <div class="detail-card">
        <div class="detail-label"><%= t("ai_validation.status") %></div>
        <div class="detail-value">
          <% if @rule.active? %>
            <span class="status-badge status-active">
              <i class="fa fa-check-circle"></i>
              <%= t("ai_validation.active") %>
            </span>
          <% else %>
            <span class="status-badge status-inactive">
              <i class="fa fa-times-circle"></i>
              <%= t("ai_validation.inactive") %>
            </span>
          <% end %>
        </div>
      </div>

      <div class="detail-card">
        <div class="detail-label"><%= t("ai_validation.created_by") %></div>
        <div class="detail-value"><%= @rule.user.name %></div>
      </div>

      <div class="detail-card">
        <div class="detail-label"><%= t("ai_validation.created_at") %></div>
        <div class="detail-value"><%= @rule.created_at.strftime("%Y-%m-%d %H:%M") %></div>
      </div>
    </div>
  </div>

  <div class="stats-section">
    <h2><%= t("ai_validation.statistics") %></h2>
    <div class="stats-grid">
      <div class="stat-card">
        <div class="stat-value"><%= @stats[:total_validations] %></div>
        <div class="stat-label"><%= t("ai_validation.total_validations") %></div>
      </div>
      <div class="stat-card stat-success">
        <div class="stat-value"><%= @stats[:passed] %></div>
        <div class="stat-label"><%= t("ai_validation.passed") %></div>
      </div>
      <div class="stat-card stat-danger">
        <div class="stat-value"><%= @stats[:failed] %></div>
        <div class="stat-label"><%= t("ai_validation.failed") %></div>
      </div>
      <div class="stat-card">
        <div class="stat-value"><%= @stats[:pass_rate] %>%</div>
        <div class="stat-label"><%= t("ai_validation.pass_rate") %></div>
      </div>
    </div>
  </div>

  <div class="results-section">
    <h2><%= t("ai_validation.validation_results") %></h2>
    <% if @results.any? %>
      <div class="table-responsive">
        <table class="results-table">
          <thead>
            <tr>
              <th><%= t("ai_validation.response") %></th>
              <th><%= t("ai_validation.confidence") %></th>
              <th><%= t("ai_validation.status") %></th>
              <th><%= t("ai_validation.issues") %></th>
              <th><%= t("ai_validation.created_at") %></th>
              <th><%= t("ai_validation.actions") %></th>
            </tr>
          </thead>
          <tbody>
            <% @results.each do |result| %>
              <tr>
                <td>
                  <%= link_to result.response.shortcode, response_path(result.response), class: "response-link" %>
                </td>
                <td>
                  <div class="confidence-bar">
                    <div class="confidence-fill" style="width: <%= (result.confidence_score * 100).round(0) %>%"></div>
                    <span class="confidence-text"><%= (result.confidence_score * 100).round(0) %>%</span>
                  </div>
                </td>
                <td>
                  <% if result.passed? %>
                    <span class="status-badge status-success">
                      <i class="fa fa-check"></i>
                      <%= t("ai_validation.passed") %>
                    </span>
                  <% else %>
                    <span class="status-badge status-danger">
                      <i class="fa fa-times"></i>
                      <%= t("ai_validation.failed") %>
                    </span>
                  <% end %>
                </td>
                <td>
                  <% if result.issues.any? %>
                    <span class="badge badge-warning"><%= result.issues.count %></span>
                  <% else %>
                    <span class="text-muted">-</span>
                  <% end %>
                </td>
                <td><%= result.created_at.strftime("%Y-%m-%d %H:%M") %></td>
                <td>
                  <%= link_to t("ai_validation.view"), response_path(result.response), class: "btn btn-sm btn-outline-primary" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="pagination-container">
        <%= will_paginate @results %>
      </div>
    <% else %>
      <div class="no-results">
        <i class="fa fa-info-circle"></i>
        <p><%= t("ai_validation.no_results") %></p>
      </div>
    <% end %>
  </div>
</div>

<style>
