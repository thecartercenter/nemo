<%= elmo_form_for(@user_import, html: {multipart: true}) do |f| %>
  <%= t_markdown("user_import.instructions_html", csv_url: template_user_imports_path(format: "csv"),
                                                  strip_outer_p_tags: false) %>
  <%= f.field(:file, required: true, partial: "file_upload/operation_file_uploader",
                     locals: {operation_type_prefix: "user_imports"}) %>
  <div class="submit-buttons">
    <%= render("file_upload/upload_in_progress_button", single_file: true) %>
    <%= f.submit(class: "btn btn-primary") %>
  </div>
<% end %>
