<%= elmo_form_for(@user_import, html: {multipart: true}) do |f| %>
  <%= tmd("user_import.instructions_html", xlsx_url: template_user_imports_path(format: "xlsx"),
                                           csv_url: template_user_imports_path(format: "csv"),
                                           strip_outer_p_tags: false) %>
  <%= f.field(:file, partial: "file_upload/operation_file_uploader",
                     locals: {operation_type_prefix: "user_imports"}) %>
  <div class="submit-buttons">
    <%= f.submit(class: "btn btn-primary") %>
    <%= render("file_upload/upload_in_progress_button", single_file: true) %>
  </div>
<% end %>
