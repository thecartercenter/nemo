# NEMO Production Environment Variables Template
# Copy this file to .env.production.local and fill in your actual values
# DO NOT commit .env.production.local to version control

##########################################################################################################
# REQUIRED VARIABLES FOR ALL SERVERS
# These must be set to real values in production

# Generate with: ruby -e "require 'securerandom'; puts SecureRandom.hex(64)"
NEMO_SECRET_KEY_BASE=CHANGE_ME_GENERATE_RANDOM_64_CHAR_HEX_STRING

# Your production domain
NEMO_URL_PROTOCOL=https
NEMO_URL_HOST=your-domain.com
NEMO_URL_PORT=443

##########################################################################################################
# REQUIRED VARIABLES FOR ONLINE SETUPS
# These must be set unless OFFLINE_MODE is enabled

# Email configuration
NEMO_SITE_EMAIL=nemo@your-domain.com
NEMO_WEBMASTER_EMAILS=admin@your-domain.com,ops@your-domain.com

# SMTP configuration
NEMO_SMTP_ADDRESS=smtp.your-domain.com
NEMO_SMTP_PORT=587
NEMO_SMTP_DOMAIN=your-domain.com
NEMO_SMTP_AUTHENTICATION=login
NEMO_SMTP_USER_NAME=your-email@your-domain.com
NEMO_SMTP_PASSWORD=your-email-password

# reCAPTCHA keys (get from https://www.google.com/recaptcha/admin/)
NEMO_RECAPTCHA_PUBLIC_KEY=your-recaptcha-public-key
NEMO_RECAPTCHA_PRIVATE_KEY=your-recaptcha-private-key

# Google Maps API key
NEMO_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

##########################################################################################################
# OPTIONAL VARIABLES
# Configure as needed for your setup

# Storage type: 'local', 'cloud'/'amazon' (S3), or 'azure'
NEMO_STORAGE_TYPE=local

# AWS S3 configuration (if using S3 storage)
# NEMO_AWS_ACCESS_KEY_ID=your-aws-access-key
# NEMO_AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# NEMO_AWS_REGION=us-east-1
# NEMO_AWS_BUCKET=your-bucket-name

# Azure Storage configuration (if using Azure storage)
# NEMO_AZURE_STORAGE_ACCOUNT_NAME=youraccountname
# NEMO_AZURE_STORAGE_ACCESS_KEY=your-azure-key
# NEMO_AZURE_CONTAINER=your-container-name

# Offline mode (set to true if server doesn't always have internet)
NEMO_OFFLINE_MODE=false

# Max upload size in MiB (should match nginx client_max_body_size)
NEMO_MAX_UPLOAD_SIZE_MIB=50

# Monitoring (optional)
# NEMO_SCOUT_KEY=your-scout-key
# NEMO_SENTRY_DSN=your-sentry-dsn

# Theme customization
NEMO_NEMO_THEME_SITE_NAME=NEMO
NEMO_ELMO_THEME_SITE_NAME=ELMO

# Missionless SMS (optional)
NEMO_ALLOW_MISSIONLESS_SMS=false
# Generate with: ruby -e "require 'securerandom'; puts SecureRandom.hex(16)"
# NEMO_UNIVERSAL_SMS_TOKEN=generate-random-32-char-hex-string

##########################################################################################################
# AI VALIDATION FEATURE (Optional)
# Configure OpenAI API for AI-powered data validation

# OpenAI API key for AI validation features
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
# Alternative variable name (takes precedence if set)
# NEMO_OPENAI_API_KEY=sk-your-openai-api-key-here

##########################################################################################################
# DATABASE CONFIGURATION
# Database settings are configured in config/database.yml
# For production, ensure database credentials are secure

# Optional: Use DATABASE_URL instead of database.yml
# DATABASE_URL=postgresql://deploy:password@localhost:5432/nemo_production
